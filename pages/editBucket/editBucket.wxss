@import "../../common/weui.wxss";
.container {
  display: flex;
  /* justify-content: space-between; *//* flex-wrap: wrap; */
  width: 100%;
  height: 100%;
  /* padding: 24rpx; */
  box-sizing: border-box;
}

.item {
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  /* background-color: lightpink; */
}

.item .title_img{
   width: 100%;
  height: 30rpx;
  /* border-left: 6rpx solid #5ed57f; */
  font-size: 30rpx;
  font-weight: bold;
  line-height: 30rpx;
  padding-left: 12rpx;
  color: #2b2b2b;
  box-sizing: border-box;
}

.item .title {
  width: 50%;
  height: 30rpx;
  /* border-left: 6rpx solid #5ed57f; */
  font-size: 30rpx;
  font-weight: bold;
  line-height: 30rpx;
  padding-left: 12rpx;
  color: #2b2b2b;
  box-sizing: border-box;
  /* background-color: cadetblue; */
}

.photos .cont {
  width: 100%;
  min-height: 340rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding: 24rpx; */
  box-sizing: border-box;
}

.addr {
  margin-top: 0px;
}

/* .time .cont, .addr .cont{ */

/* border-bottom: 1rpx solid #e9e9e9; */

/* } */

.picker image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: -10%;
  margin-right: 12rpx;
}

.item .cont {
  font-size: 13px;
  color: #2b2b2b;
  text-align: center;
  height: 40px;
  line-height: 40px;
  margin: 20rpx;
  border-radius: 5rpx;
  /* background-color: lightgray; */
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tag_img{
  width: 32rpx;
  height: 32rpx;
}

.event .cont, .addr .cont, .time .cont {
  border: 1px #6C5AFB dashed;
}

.cont .photos {
  display: flex;
  justify-content: center;
  align-items: center;
  /* flex-wrap: wrap; */
}

slider {
  width: 600rpx;
  margin: 0 auto;
}

.txt-have {
  font-size: 26rpx;
  color: #2b2b2b;
}

textarea {
  width: 640rpx;
  height: 360rpx;
  margin: 0 auto;
  padding: 24rpx;
  box-sizing: border-box;
  /* box-shadow:0 4rpx 8rpx 0 rgba(43,45,46,.16); */
  font-size: 26rpx;
  color: #2b2b2b;
}

.item .no-cont {
  font-size: 30rpx;
  line-height: 1.2;
  color: #aaa;
  text-align: center;
}

.img {
  position: relative;
}

.img .show-pic{
   width: 300rpx;
  /* margin: 20rpx auto; */
  height: 300rpx;
}

.del {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  border-radius: 50%;
}

.add-pic {
  border: 1px dashed #6C5AFB;
  width: 300rpx;
  /* margin: 20rpx auto; */
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.add-pic image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.tip {
  font-size: 20rpx;
  color: #aaa;
  text-align: center;
}

.control {
  width: 100%;
  display: flex;
  padding-bottom: 24rpx;
  /* background-color: purple; */
  justify-content: center;
  padding: 0;
}

button {
  border-radius: 8rpx;
  /* width: 120rpx; */
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  box-shadow: 0 4rpx 8rpx 0 rgba(43, 45, 46, 0.16);
  margin: 10rpx;
}

.edit-all {
  background: lightblue;
  color: #2b2b2b;
}

.save {
  width: 200rpx;
  background: #6C5AFB;
  color: #faf6f6;
}

.weui-cell{
  width: 100%

}

.weui-uploader__title, .weui-uploader__info{
  font-size: 14px;
}

.hideTrue {
display: none
}

.page__bd {
    padding-bottom: 0px;
    /* background-color: chocolate; */
    /* float: left; */
    display: block;
}
.weui-uploader__info{
  width: 50%;
  height: 30rpx;
  line-height: 30rpx;
  float: right;
  margin-right: 20rpx;
  /* background-color: chocolate; */
  text-align: right;
}

.pics_top{
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  float: left;
  display: flex;
  margin-top: 10rpx;
}