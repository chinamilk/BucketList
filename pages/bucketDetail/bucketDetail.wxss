/* pages/bucketDetail/bucketDetail.wxss */

.container {
  display: flex;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  /* padding-bottom: 20px; */

}
.bg_img{
  width: 100%;
  height: 100%;
}

.day_tag{
  width: 90%;
  height: 40%;
  /* bottom: 40rpx; */
  top: 20rpx;
  padding: 0px;
  margin: 0px;
  position: absolute;
  display: block;
  z-index: 200;
}

.day_tag_info{
  background-color: #6C5AFB;
  width: 80%;
  height: 50rpx;
  display: flex;
  font-size: 35rpx;
  line-height: 35rpx;
  align-items: center;
  margin-top: 10rpx;
  margin-left: 40rpx;
  border-radius: 50%;
  justify-content: center;
  color: white;
}

.day_tag_info_name{
  /* background-color: burlywood; */
  width: 180rpx;
  border-right: 4rpx white dashed;
  margin-left: 30rpx;
}

.day_tag_info_title{
  margin-left: 10rpx;
}

.day_tag_info_cont{
  /* width: 90%; */
  font-size: 30rpx;
  margin-left: 40rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  /* background-color: cadetblue; */
display: block;
/* bottom: 100rpx; */
}
.day_tag_info_cont_en{
  font-size: 40rpx;
  font-family: 'Times New Roman', Times, serif;
  font-style: oblique;
}

.day_tag_info_cont_ch{
  margin-top: 10rpx;
  font-weight: lighter;
  font-size: 35rpx;
  /* height: 20%; */
}

.bucket_detail {
  width: 90%;
  height: 50%;
  bottom: 40rpx;
  padding: 0px;
  margin: 0px;
  position: absolute;
  background-color: whitesmoke;
  border-radius: 20px;
  justify-content: center;
  align-items: center;
  display: flex;
  z-index: 200;
  opacity: 0.8;
}

.bucket_detail .userinfo_info {
  width: 90%;
  height: 120rpx;
  /* background-color: lavenderblush; */
  display: flex;
  top: 40rpx;
  /* justify-content: center; *//* align-items: center; */
  position: absolute;
  align-items: center;
}

.userinfo_avator {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border:1rpx white solid;
  /* background-color: lightblue; */
  
}

.userinfo_title {
  display: block;
  width: 75%;
  height: 100rpx;
  margin-left: 20rpx;
  /* margin-right: 10rpx; */
  align-items: center;
}

.userinfo-nickname {
  /* background-color: cadetblue; */
  height: 50rpx;
  line-height: 50rpx;
}

.userinfo-themename {
  /* background-color: lightcyan; */
  font-size: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-top: 15rpx;
  /* color: lightgray; */
  font-weight: lighter;
}

.bucket_info {
  width: 90%;
  height: 35%;
  /* background-color: cornflowerblue; */
  font-size: 30rpx;
  line-height: 30rpx;
  display: block;

  border-bottom: 1rpx dashed #6C5AFB;
  border-top: 1rpx dashed #6C5AFB;
}

.bucket_name_info, .bucket_time_info, .bucket_address_info {
  display: flex;
  width: 100%;
  height: 30%;
  margin-top: 15rpx;
}

.bucket_name_info_icon, .bucket_time_info_icon, .bucket_address_info_icon {
  width: 32rpx;
  height: 32rpx;
  /* background-color: coral; */
}

.bucket_name_info_title, .bucket_time_info_title, .bucket_address_info_title {
  width: 150rpx;
  height: 32rpx;
  color: #6C5AFB;
  text-align: center;
}

.bucket_name_info_cont, .bucket_time_info_cont, .bucket_address_info_cont {
  height: 32rpx;
  width: 65%;
  margin-left: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  /* background-color: bisque; */
  text-align: right;
font-weight: lighter;
}

.qrcode_icon{
  width: 100%;
  height: 150rpx;
  /* background-color: cadetblue; */
  justify-content: center;
  display: flex;
}

.qrcode_icon image{
  width: 150rpx;
  height: 150rpx;
  /* align-items: center; */
}
