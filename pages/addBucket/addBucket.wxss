.container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  /* padding: 24rpx; */
  box-sizing: border-box;
  /* background-color: peru; */
  position: relative;
}

.things {
  display: flex;
  justify-content: left;
  flex-wrap: wrap;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  position: absolute;
  float: left;
  margin-bottom: 50px;
}

.card {
  background: #fff;
  box-shadow: 0 4rpx 8rpx 0 rgba(43, 45, 46, 0.16);
  border-radius: 12rpx;
  width: 160rpx;
  height: 160rpx;
  margin: 10rpx 9rpx;
  text-align: center;
  padding: 10rpx;
  box-sizing: border-box;
  color: #2b2b2b;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.inner {
  font-size: 24rpx;
}

.done {
  position: absolute;
  top: 0;
  left: 0;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 80rpx;
  border-radius: 50%;
  background: lightsalmon;
}

.done image {
  width: 32rpx;
  height: 32rpx;
  padding: 40rpx 0 0 40rpx;
}

.edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  transform: rotate(45deg) translateX(40rpx);
  background: rgb(183, 235, 183);
}

.edit image {
  width: 40rpx;
  height: 40rpx;
}

button[plain] {
  border: none;
  padding: 0;
  margin: 0;
  width: 160rpx;
  height: 160rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

